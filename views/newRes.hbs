<link rel="stylesheet" href="/reservationStyle.css"> 
<body>    
     <div class="welcome">
                    <h2>Καλωσήρθατε στη φόρμα Κρατήσεων του El Dorado</h2>
    </div>  
        <div class="row">
           
            <div class="col-3"></div>

            <div class="col-6">
                <div >
                <form action="/newRes" method="POST">
                <div class="box">
                        <fieldset>
                            <legend>Στοιχεία Πελάτη</legend>
            
                            <fieldset>
                                Όνομα: <input type="text" name="name" id="name" value="{{formData.name}}" required><br><br>
                                Επώνυμο: <input type="text" name="surname" id="surname" value="{{formData.surname}}" required><br><br>
                                S.S.N.: <input type="text" name="SSN" id="SSN" value="{{formData.SSN}}" required><br><br>
                            </fieldset>
                            
                </div>
                <div class="box">
                        <fieldset>
                            <legend>Στοιχεία Διεύθυνσης</legend>
                            Οδός και Αριθμός: <input type="text" name="street" id="street" value="{{formData.street}}"><br><br>
                            Πόλη: <input type="text" name="city" id="city" value="{{formData.city}}"><br><br>
                            ΤK: <input type="text" name="postal_code" id="postal_code" value="{{formData.postal_code}}" ><br><br>
                        </fieldset>
                    
                </div>
                <div class="box">
                        <fieldset>
                            <legend>Στοιχεία Επικοινωνίας</legend>
                            Τηλέφωνο: <input type="tel" name="telephone" id="telephone" value="{{formData.telephone}}" required><br><br>
                            Email: <input type="email" name="email" id="email" value="{{formData.email}}" required><br><br>
                        </fieldset>
                      
                 
                    </fieldset>
                </div>

                <div class="box">
                    <fieldset>
                        <legend>Στοιχεία Κράτησης</legend>
                        
                        <fieldset>
                            <h5>Δωμάτιο:</h5>
                            <input type="radio" name="room" id="room1" value="1">
                            <label for="roomA">San Jose (Δίκλινο-Budget)</label><br>
                            <input type="radio" name="room" id="room2" value="2">
                            <label for="roomB">Veracruz (Δίκλινο-Luxurious)</label><br>
                            <input type="radio" name="room" id="room3" value="3">
                            <label for="roomC">Cordoba (Τετράκλινο-Budget)</label><br>
                            <input type="radio" name="room" id="room4" value="4">
                            <label for="roomD">Guadalajara (Τετράκλινο-Luxurious)</label><br>
                            <input type="radio" name="room" id="room5" value="5">
                            <label for="roomE">Ciudad Juarez (Εξάκλινο-Luxurious)</label><br>
                        </fieldset>
                        <hr>
    
                        <fieldset>
                            <h5>Αριθμός Ατόμων:</h5>
                            <select name="PeopleNo">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            </select>
                        </fieldset>
                        <hr>
                        <fieldset>
                            <h5>Ημερομηνία Άφιξης:</h5><input type="date" name="arrival_date" id="ariival_date">
                            <br><br>
                            <h5>Ημερομηνία Αναχώρησης:</h5> <input type="date" name="departure_date" id="departure_date"><br><br>
                        </fieldset>
                       
                </div>
                <div class="box">  
                        <fieldset>
                            <legend>Πακέτα Φαγητού:
                                <button type="button" onclick="window.location.href = '/aboutfood'" class="info-button">
                                <img src="img/info-icon2.png" alt="Info" class="info-icon">
                            </button>
                            </legend>
                            
                        
                            <input type="checkbox" name="food" id="food1" value="1">
                            <label for="breakfast1">Πρωινό Απλό</label><br>
                            <input type="checkbox" name="food" id="food2" value="2">
                            <label for="breakfast2">Πρωινό Buffet</label><br>
                            <input type="checkbox" name="food" id="food3" value="3">
                            <label for="lunch1">Μεσημεριανό Απλό</label><br>
                            <input type="checkbox" name="food" id="food4" value="4">
                            <label for="lunch2">Μεσημεριανό Buffet</label><br>
                            <input type="checkbox" name="food" id="food5" value="5">
                            <label for="dinner1">Δείπνο Απλό</label><br>
                            <input type="checkbox" name="food" id="food6" value="6">
                            <label for="dinner2">Δείπνο Buffet</label><br>
                            <input type="checkbox" name="food" id="food7" value="7">
                            <label for="dinner3">Δείπνο Valentine's</label>
                            <br>
                        </fieldset>
                    </fieldset>
                
                </div>
                <div class="ypovoli"> 
                    <input type="submit" value="Επιβεβαίωση Κράτησης">
                </form>
                </div>
                </div>
            </div>
            
            <div class="col-3"></div>
</body> 